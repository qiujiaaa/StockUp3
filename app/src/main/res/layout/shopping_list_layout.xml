<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="7">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopping_list_layout_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/item_name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shopping_list_layout_brand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:text="@string/item_brand"
                android:textSize="12sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shopping_list_layout_button_s"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/subtract"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/shopping_list_layout_quantity"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/shopping_list_layout_button_a"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/add"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/shopping_list_layout_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="$1.00"
                android:layout_marginTop="15dp"/>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>