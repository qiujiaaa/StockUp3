<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyerAddToGroceriesActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/temp"/>

    <TextView
        android:id="@+id/add_to_groceries_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="@string/item_name"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:text="Enter Usage Period:"
        android:textColor="#ff0c0b"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/add_to_groceries_usage_period"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:hint="days"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:inputType="number"/>

    <Button
        android:id="@+id/add_to_groceries_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:text="Add to groceries"
        android:backgroundTint="#ff6867"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>